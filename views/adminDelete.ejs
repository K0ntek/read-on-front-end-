<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Usuń książkę</title>
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/adminTEMP.css" />
    </head>
    <body>
        <div class="header">
            <div class="menu">
                <ul>
                    <li><a href="/">Strona główna</a></li>

                    <li><a href="/admin/new">Dodaj książkę</a></li>

                    <li><a href="/admin/edit">Edytuj książkę</a></li>

                    <li><a href="/admin/delete">Usuń książkę</a></li>
                </ul>
            </div>

            <div class="header-content">
                <h1>Choose a book to delete</h1>
                <div id="books">
                    <% books.forEach(book => { %>
                    <a href="#" class="abutton" onclick="burn('<%= book._id %>')"
                        ><%= book.title %> by <%= book.author %></a
                    >
                    <% }) %>
                </div>
            </div>
        </div>
        <script>
            function burn(id) {
                if (
                    confirm(
                        "are you really sure? like really, we wont be able to recover it anymore and youre gonna lose a book you loser"
                    )
                ) {
                    fetch("/admin/delete", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ id }),
                    }).then(() => {
                        location.reload();
                    });
                }
            }
        </script>
    </body>
</html>
