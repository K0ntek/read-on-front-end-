<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=2.0" />
		<title>READ ON!</title>

		<link rel="stylesheet" href="/css/index.css" />
		<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.js"></script>
	</head>
	<body>
		<div class="header">
			<div class="toggleMenu">
				<p>MENU</p>
			</div>
			<div class="menu">
				<ul>
					<li><a href="/admin/login">Zaloguj się</a></li>

					<li><a href="/">Strona główna</a></li>
				</ul>
			</div>

			<div class="header-content">
				<div class="title">
					<h2 id="readText">READ <span id="onText">ON!</span></h1>
				</div>
				<div class="title-content">
					<p id="titleText"></p>
				</div>
			</div>
		</div>

		<div class="main">
			<p class="textMain">Lista dostępnych książek</p>
			<form style="text-align: center;" action="/book" method="post">
				<input type="text" name="title" placeholder="Wpisz nazwę książki" /><br>
	
				<input type="submit" value="Szukaj" />
				<input type="button" value="Wybierz kategorię" id="categoryButton"/>
				<div class="tags" id="tags" style="display: none; 	">
					<% tags.forEach(tag => { %>
					<label for="<%= tag.name %>"><%= tag.name %><input type="checkbox" name="tags" id="<%= tag.name %>" value="<%= tag.name %>" /><br /></label>
					<% }) %>
				</div>
			</form>

			<script>
				$(document).ready(function(){
					$("#categoryButton").click(function(){
						$("#tags").toggle(500);
						
					})
				})
			</script>


			<script>
				$(document).ready(function(){
					$("#bookName").click(function(){
						$("#bookName").css({
							borderColor: 'purple',
							borderStyle: 'solid',
							borderWidth: '1px',
							color: 'black'
						})
					})
				})
			</script>

			<div class="bookList">
				<% books.forEach(book => { %>
					<a href="/book/<%= book._id %>">
						<div class="book" id="book">
							<div class="image" id="image">
								<img src="<%= book.imgLink %>" class="img" alt="Book cover" />
							</div>
			
							<div class="book-content">
								<div class="book-title" id="bookTitle">
									<p><%= book.title %></p>
								</div>
			
								<div class="author" id="author">
									<p><%= book.author %></p>
								</div>
								<div class="description" id="description" style="display: none">
									<p id="bookDesc" class="bookDesc"><%= book.desc %></p>
								</div>

								<div class="category" id="category">
									<p><%= book.tags %></p>
								</div>
							</div>
						</div>
					</a>
				<% });%>
			</div>
		</div>
		<script src="/js/index.js"></script>
		<script src="/js/konami.js"></script>
		<script>
			new Konami(() => {
				document.getElementById("readText").innerHTML = "BOOK <span id='onText'>HUB</span>"
				setTimeout(() => {
					document.getElementById("onText").style.backgroundColor = "#FFA31A";
				}, 1)
			})
		</script>
	</body>
</html>
